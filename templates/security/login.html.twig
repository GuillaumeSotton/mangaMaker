{% extends 'base.html.twig' %}
{% block title %}Login!{% endblock %}

{% block body %}
    <form class="form-signin" style="width: 50%; margin: 50px auto " method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" style="margin-bottom: 20px" required autofocus>
        <label for="inputPassword" class="sr-only">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
        <button class="btn btn-lg btn-primary btn-block" style="margin-top: 20px" type="submit">
            Se connecter
        </button>
    </form>
{% endblock %}